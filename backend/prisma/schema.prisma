generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  PENDING
  ACTIVE
  DISABLED
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  status    UserStatus @default(PENDING)

  roles     UserRole[]
  auditLogs AuditLog[] @relation("ActorLogs")

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum RoleType {
  system
  custom
}

model Role {
  id          String   @id @default(uuid())
  code        String   @unique // ADMIN, VIEWER, SUPPORT 등
  name        String
  description String?
  type        RoleType @default(system)

  users       UserRole[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserRole {
  userId String
  roleId String

  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model AuditLog {
  id        String   @id @default(uuid())

  action    String   // USER_CREATE, ROLE_ASSIGN 등
  target    String   // User, Role, Permission
  targetId  String?

  actorId  String?
  actor    User?    @relation("ActorLogs", fields: [actorId], references: [id])

  meta      Json?

  createdAt DateTime @default(now())
}


model InviteToken {
  id        String   @id @default(uuid())

  // 초대 대상 이메일 (이 단계에서는 User를 만들지 않음)
  email     String

  // 초대 링크에 포함될 랜덤 토큰
  token     String   @unique

  // 만료/1회 사용 처리
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}